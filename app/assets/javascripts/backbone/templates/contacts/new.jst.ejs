<h1>New contact</h1>

<form id="new-contact" name="contact">
  <div class="field">
    <label for="name"> name:</label>
    <input type="text" name="name" id="name" value="<%= name %>" >
  </div>

  <div class="field">
    <label for="address"> address:</label>
    <input type="text" name="address" id="address" value="<%= address %>" >
  </div>

  <div class="field">
    <label for="phone"> phone:</label>
    <input type="text" name="phone" id="phone" value="<%= phone %>" >
  </div>

  <div class="field">
    <label for="email"> email:</label>
    <input type="text" name="email" id="email" value="<%= email %>" >
  </div>

  <div class="field">
    <label for="company"> company:</label>
    <input type="text" name="company" id="company" value="<%= company %>" >
  </div>

  <div class="actions">
    <input type="submit" class="btn btn-small btn-success" value="Create Contact" />
  </div>

</form>

<a href="#/index" class="btn btn-mini btn-primary">Back</a>